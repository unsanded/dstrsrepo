pkgname=qutim-plugin-irc-svn
pkgver=3
pkgrel=1
pkgdesc="IRC plugin for qutim-core"
arch=('i686' 'x86_64')
url="http://qutim.org"
license=('GPL')
makedepends=('subversion' 'qutim-core-svn')
depends=(qt)
conflicts=()
provides=()

source=()                              
md5sums=()

_svnmod=irc
_svntrunk=http://qutim.org/svn/$_svnmod

build() {
 . ../../optimizations-$CARCH

 msg "Getting sources from SVN..."

  if [ -d $_svnmod/.svn ]; then
    cd $_svnmod && svn up
  else
    svn co $_svntrunk $_svnmod
  fi

 cd $srcdir
 rm -rf $_svnmod-build
 cp -R $_svnmod $_svnmod-build
 cd $_svnmod-build
 msg "SVN checkout done or server timeout"
 msg "Starting make..."

 qmake
 make || return 1

 mkdir -p $pkgdir/usr/lib/qutim/
 install -Dm 644 $srcdir/$_svnmod-build/lib$_svnmod.so \
  $pkgdir/usr/lib/qutim/ || return 1
 cd ..
 rm -rf $_svnmod-build 

}
