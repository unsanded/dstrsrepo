. ./account
workdir="`dirname $0`"
[ $workdir = "." ] && workdir="`pwd`"

cd pkgbuilds

for dir in $( ls ); do
	cd "$workdir/pkgbuilds/$dir"
	if makepkg; then
		pkg=`ls *-x86_64.pkg.tar.gz -1|tail -n 1`
		sudo pacman -U --noconfirm $pkg
		cp $pkg "$workdir"/x86_64 
		cd "$workdir"/x86_64 
		repo-add dstrsrepo.db.tar.gz $pkg
		svn add $pkg
	fi
	cd "$workdir"
done

svn commit --username $username --password $passwd --quiet -m "Auto commit by buildscript"
