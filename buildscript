. ./account
. /etc/makepkg.conf
workdir="`dirname $0`"
[ $workdir = "." ] && workdir="`pwd`"

cd pkgbuilds

for dir in $( ls ); do
	cd "$workdir/pkgbuilds/$dir"
	if makepkg --asroot; then
		pkg=`ls *-$CARCH.pkg.tar.gz -1|tail -n 1` 
		sudo pacman -U --noconfirm $pkg
		cp $pkg "$workdir"/$CARCH 
		cd "$workdir"/$CARCH
		repo-add dstrsrepo.db.tar.gz $pkg
		svn add $pkg
	fi
	cd "$workdir"
done

#svn commit --username $username --password $passwd -m "Auto commit by buildscript ($CARCH)"
